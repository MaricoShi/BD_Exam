            </div>
            <div class="modal-body" id="modal-OrgData-Content"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info">确认</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


